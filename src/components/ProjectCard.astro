---
import ManualProjectCard from "./ManualProjectCard.astro";

export interface Props {
  title: string;
  description: string;
  src: string;
  website?: string;
  github?: string;
}

const { title, description, src, website, github } = Astro.props;
---

<ManualProjectCard title={title} src={src} website={website} github={github}>
  <p class="mb-4 text-sm leading-normal" set:html={description} />
</ManualProjectCard>
